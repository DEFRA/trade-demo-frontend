{% extends "layouts/page.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/example/" + example.id if example else "/examples"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if errorList %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorList
        }) }}
      {% endif %}

      <h1 class="govuk-heading-l">{{ heading }}</h1>

      <form method="post" novalidate>
        <input type="hidden" name="crumb" value="{{ crumb }}" />

        {{ govukInput({
          label: {
            text: "Name",
            classes: "govuk-label--m"
          },
          hint: {
            text: "Enter a unique name for this example"
          },
          id: "name",
          name: "name",
          value: example.name if example else "",
          errorMessage: {
            text: "Enter a name"
          } if errorList and errorList | selectattr('href', 'equalto', '#name') | list | length > 0 else false,
          classes: "govuk-!-width-two-thirds"
        }) }}

        {{ govukTextarea({
          label: {
            text: "Value",
            classes: "govuk-label--m"
          },
          hint: {
            text: "Enter a description or configuration value for this example"
          },
          id: "value",
          name: "value",
          value: example.value if example else "",
          errorMessage: {
            text: "Enter a value"
          } if errorList and errorList | selectattr('href', 'equalto', '#value') | list | length > 0 else false,
          rows: 5
        }) }}

        {{ govukInput({
          label: {
            text: "Counter",
            classes: "govuk-label--m"
          },
          hint: {
            text: "Optional. Enter a number between 0 and 999"
          },
          id: "counter",
          name: "counter",
          value: example.counter if example.counter is not none and example.counter !== null else "",
          errorMessage: {
            text: "Counter must be a number"
          } if errorList and errorList | selectattr('href', 'equalto', '#counter') | list | length > 0 else false,
          classes: "govuk-input--width-5",
          inputmode: "numeric",
          spellcheck: false
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Save changes"
          }) }}

          <a class="govuk-link" href="/example/{{ example.id }}">Cancel</a>
        </div>
      </form>

    </div>
  </div>
{% endblock %}
