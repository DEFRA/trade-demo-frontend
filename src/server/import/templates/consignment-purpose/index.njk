{% extends "layouts/page.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/import/commodity/codes"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if errorList %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorList
        }) }}
      {% endif %}

      <form method="post" novalidate>
        <input type="hidden" name="crumb" value="{{ crumb }}" />

        {{ govukRadios({
          name: "purpose",
          fieldset: {
            legend: {
              text: heading,
              classes: "govuk-fieldset__legend--l",
              isPageHeading: true
            }
          },
          hint: {
            text: "Select the main reason the animals are being brought into Great Britain"
          },
          items: [
            {
              value: "internalmarket",
              text: "For import into Great Britain or Northern Ireland",
              checked: purpose == "internalmarket",
              conditional: {
                html: govukSelect({
                  name: "internal-market-purpose",
                  id: "internal-market-purpose",
                  label: {
                    text: "What are the animals for?"
                  },
                  value: internalMarketPurpose,
                  items: [
                    { value: "", text: "Select a purpose" },
                    { value: "Commercial Sale", text: "Commercial Sale" },
                    { value: "Rescue", text: "Rescue" },
                    { value: "Breeding", text: "Breeding" },
                    { value: "Research", text: "Research" },
                    { value: "Racing or Competition", text: "Racing or Competition" },
                    { value: "Companion Animal not for Resale or Rehoming", text: "Companion Animal not for Resale or Rehoming" },
                    { value: "Production", text: "Production" },
                    { value: "Slaughter", text: "Slaughter" },
                    { value: "Fattening", text: "Fattening" },
                    { value: "Game Restocking", text: "Game Restocking" }
                  ]
                })
              }
            },
            {
              value: "re-entry",
              text: "Re-entry after temporary export from Great Britain",
              hint: {
                text: "Animals that were temporarily exported and are now returning"
              },
              checked: purpose == "re-entry"
            }
          ],
          errorMessage: formError
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Save and continue"
          }) }}

          <button type="button" id="save-as-draft-button" class="govuk-button govuk-button--secondary" data-module="govuk-button">
            Save as draft
          </button>
        </div>
      </form>

    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
  {{ super() }}
  <script type="module" src="{{ getAssetPath('save-as-draft.js') }}"></script>
{% endblock %}
