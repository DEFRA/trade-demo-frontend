{% extends "layouts/page.njk" %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/import/consignment/purpose"
  }) }}
{% endblock %}

{% block content %}
  {% if errorSummary %}
    {{ govukErrorSummary(errorSummary) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">


      <form method="post" novalidate>

        <input type="hidden" name="crumb" value="{{ crumb }}"/>

        <h1 class="govuk-heading-xl">{{ heading }}</h1>

        <div class="govuk-form-group{% if bcpError %} govuk-form-group--error{% endif %}">
          {{ govukInput({
            label: {
              text: "BCP or Port of Entry",
              classes: "govuk-label--m"
            },
            id: "bcp",
            name: "bcp",
            value: bcp if bcp
          }) }}

          {{ govukSelect({
            label: {
              text: "Means of transport to BCP or Port of Entry",
              classes: "govuk-label--l",
              isPageHeading: true
            },
            id: "transport-means-before",
            name: "transport-means-before",
            value: transportMeansBefore,
            items: [
              { value: "", text: "Select means of transport to BCP or Port of Entry" },
              { value: "Airplane", text: "Airplane" },
              { value: "Railway", text: "Railway" },
              { value: "Road Vehicle", text: "Road Vehicle" },
              { value: "Vessel", text: "Vessel" }
            ]
          }) }}

          <p class="govuk-body govuk-label--m">Vehicle Identification</p>
          <div id="vehicle-identifier-hint" class="govuk-hint">
            To identify the means of transport, enter (one of the following):
            <ul>
              <li>flight number</li>
              <li>train number</li>
              <li>road vehicle registration number</li>
              <li>vessel name (for ferries, also the road vehicle registration number)</li>
            </ul>
          </div>
          <input class="govuk-input" id="vehicle-identifier" name="vehicle-identifier" type="text" value="{{ vehicleIdentifier if vehicleIdentifier }}"/>

        </div>

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue"
          }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block pageScripts %}
  <script src="{{ assetPath }}/javascripts/application.js"></script>
  <script>
    {% include "../../../controllers/transport.js" %}
  </script>

  <style>
    .autocomplete-suggestions {
      border: 1px solid #b1b4b6;
      background: white;
      max-height: 300px;
      overflow-y: auto;
      position: absolute;
      z-index: 1000;
      width: calc(100% - 2px);
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      margin-top: -1px;
    }

    .autocomplete-suggestion {
      padding: 12px;
      cursor: pointer;
      border-bottom: 1px solid #f3f2f1;
    }

    .autocomplete-suggestion:last-child {
      border-bottom: none;
    }

    .autocomplete-suggestion:hover,
    .autocomplete-suggestion-active {
      background-color: #1d70b8;
      color: white;
    }

    .autocomplete-suggestion.no-results {
      cursor: default;
      color: #505a5f;
      font-style: italic;
    }

    .autocomplete-suggestion.no-results:hover {
      background-color: transparent;
      color: #505a5f;
    }

    .bcp-name {
      font-weight: bold;
      margin-bottom: 4px;
    }

    .bcp-code {
      font-size: 14px;
      color: #626a6e;
    }

    .autocomplete-suggestion:hover .bcp-code,
    .autocomplete-suggestion-active .bcp-code {
      color: #b1b4b6;
    }

    .govuk-form-group {
      position: relative;
    }
  </style>
{% endblock %}
